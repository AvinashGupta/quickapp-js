doctype html

html(lang='en', xmlns='http://www.w3.org/1999/xhtml')
  head
    title Web App

    // General META 
    meta(charset='utf-8')
    meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,initial-scale=1')

    // Semantic META 
    meta(name='keywords', content='web-app,web-app1')
    meta(name='description', content='web-app')

    // Social META 
    meta(property='fb:app_id', content='AppID')
    meta(property='og:site_name', content='site_name')
    meta(property='og:title', content='web-app')
    meta(property='og:description', content='web-app')
    meta(property='og:url', content='URL')
    meta(property='og:image', content='/img/image.png')
    meta(property='og:type', content='website')

    // Fav Icon 
    link(href='/img/favicon.ico' rel='shortcut icon',type='image/x-icon')

    // Dependencies style
    link(rel='stylesheet' href='/lib/bower/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/lib/bower/bootstrap/dist/css/bootstrap-theme.min.css')
    link(rel='stylesheet' href='/lib/bower/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet' href='/lib/bower/angular-growler/build/angular-growl.min.css')
    link(rel='stylesheet' href='/style-sheets/common.css')
    link(rel='stylesheet' href='/style-sheets/fonts.css')

    // App Modules custom style
    - for(var j=0; j<application.css.length; j++)
        link(rel='stylesheet' href=application.css[j])

    // HTML5 Shim 
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
    
    // Dependencies Js
    script(type='text/javascript' src='/lib/bower/lodash/lodash.min.js')
    script(type='text/javascript' src='/lib/bower/jquery/dist/jquery.min.js')
    script(type='text/javascript' src='/lib/bower/bootstrap/dist/js/bootstrap.min.js')
    script(type='text/javascript' src='/lib/bower/angular/angular.min.js')
    script(type='text/javascript' src='/lib/bower/angular-resource/angular-resource.min.js')
    script(type='text/javascript' src='/lib/bower/angular-cookies/angular-cookies.min.js')
    script(type='text/javascript' src='/lib/bower/angular-animate/angular-animate.min.js')
    script(type='text/javascript' src='/lib/bower/angular-sanitize/angular-sanitize.min.js')
    script(type='text/javascript' src='/lib/bower/angular-bootstrap/ui-bootstrap-tpls.min.js')
    script(type='text/javascript' src='/lib/bower/angular-ui-utils/ui-utils.min.js')
    script(type='text/javascript' src='/lib/bower/angular-ui-router/release/angular-ui-router.min.js')
    script(type='text/javascript' src='/lib/bower/angular-growler/build/angular-growl.min.js')

    // Initialize App module
    script(src='/js/home.js')
    
    // App Modules custom js
    - for(var j=0; j<application.js.length; j++)
        script(type='text/javascript' src=application.js[j])

    // To remove hash from URL
    base(href='/')
  
  body(ng-cloak ui-view="")
